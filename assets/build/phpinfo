#!/bin/bash

set -e

mkdir /var/www/phpinfo

cat >/var/www/phpinfo/index.php <<EOF
<?php
phpinfo();
?>
EOF

cat >/etc/apache2/sites-available/00-phpinfo <<EOF
Alias /phpinfo /var/www/phpinfo

<Directory /var/www/phpinfo>
    FCGIWrapper /var/www/fcgid/php-fcgi .php
    Options +ExecCGI
</Directory>
EOF

a2ensite 00-phpinfo